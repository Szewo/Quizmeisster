<!DOCTYPE html>
<html lang="eng">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Quizmeisster Alpha! {% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="navbar-brand" href="{{ path('homepage') }}">Quizmeisster Alpha</a>
            {% endif %}

            {% if is_granted('IS_ANONYMOUS') %}
                <a class="navbar-brand" href="{{ path('main') }}">Quizmeisster Alpha</a>
            {% endif %}

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Add Quiz</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Score</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                </ul>

            </div>
            {% endif %}
        </nav>
        {% block body %}

            <div class="container">
                {% block content %}

                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
